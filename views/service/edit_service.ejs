<!DOCTYPE html>
<html>
<head>

    <%- include('../includes/header') -%>
</head>
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

    <%- include('../includes/navbar') -%>
    <%- include('../includes/sidebar') -%>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Dashboard
                <small>Control panel</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">New Service</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">

            <div class="row margin">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Edit Services</h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body table-responsive no-padding">
                            <hr>
                            <form action="/admin/edit-service/<%= service.id %>/save" method="post" class="form">
                                <div class="col-lg-offset-3 col-xs-offset-3 col-xs-6 form-group">
                                    <label for="name">Service Name</label>
                                    <input type="text" id="name" name="service_name" required class="form-control" value="<%= service.service_name%>" placeholder="New Service Name">
                                </div>
                                <div class="col-lg-offset-3 col-xs-offset-3 col-xs-6 form-group">
                                    <label for="category">Service Category</label>
                                    <select name="service_category" id="category" class="form-control">
                                        <option <%= service.service_category=='Frontend'?'selected':'' %>>Frontend</option>
                                        <option <%= service.service_category=='Marketing'?'selected':'' %>>Marketing</option>
                                        <option <%= service.service_category=='Design'?'selected':'' %>>Design</option>
                                        <option <%= service.service_category=='Backend'?'selected':'' %>>Backend</option>
                                    </select>
                                </div>
                                <div class="col-lg-12 text-center form-group">
                                    <input type="submit" value="Update" class="btn btn-success">
                                </div>
                            </form>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
            </div>

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <%- include('../includes/footer') -%>

</div>
<!-- ./wrapper -->


<%- include('../includes/scripts') -%>
</body>
</html>
