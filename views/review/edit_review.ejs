<!DOCTYPE html>
<html>
<head>

    <%- include('../includes/header') -%>
</head>
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

    <%- include('../includes/navbar') -%>
    <%- include('../includes/sidebar') -%>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Dashboard
                <small>Control panel</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">New Review</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">

            <div class="row margin">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Edit Reviews</h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body table-responsive no-padding">
                            <hr>
                            <form action="/admin/edit-review/<%= review.id %>/save" method="post" class="form">
                                <div class="col-lg-offset-3 col-xs-offset-3 col-xs-6 form-group">
                                    <label for="name">Client Name</label>
                                    <input type="text" id="name" name="review_name" required class="form-control" value="<%= review.client_name %>" placeholder="Client Name">
                                </div>
                                <div class="col-lg-offset-3 col-xs-offset-3 col-xs-6 form-group">
                                    <label for="review">Client Review</label>
                                    <textarea name="client_review" id="review" cols="30" rows="10" required class="form-control"><%= review.client_review %></textarea>
                                </div>
                                <div class="col-lg-12 text-center form-group">
                                    <input type="submit" value="Update" class="btn btn-success">
                                </div>
                            </form>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
            </div>

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <%- include('../includes/footer') -%>

</div>
<!-- ./wrapper -->


<%- include('../includes/scripts') -%>
</body>
</html>
